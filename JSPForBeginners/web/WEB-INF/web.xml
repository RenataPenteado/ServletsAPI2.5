<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>HobbyPage</servlet-name>
        <servlet-class>com.litinow.servlets.HobbyPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HobbyPage</servlet-name>
        <url-pattern>/HobbyPage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MyTestInit</servlet-name>
        <jsp-file>/ServletInitParamsJSP/TestInit.jsp</jsp-file>
        <init-param>
            <param-name>email</param-name>
            <param-value>renata.penteado@litinow.com</param-value>
        </init-param>
    </servlet>    
    <servlet-mapping>
        <servlet-name>MyTestInit</servlet-name>
        <url-pattern>/ServletInitParamsJSP/TestInit.jsp</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>

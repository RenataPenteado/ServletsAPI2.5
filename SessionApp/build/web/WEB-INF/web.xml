<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>OpenSessionServlet</servlet-name>
        <servlet-class>com.litinow.servlets.OpenSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckSessionAttribute</servlet-name>
        <servlet-class>com.litinow.servlets.CheckSessionAttribute</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ThirdServlet</servlet-name>
        <servlet-class>com.litinow.servlets.ThirdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OpenSessionServlet</servlet-name>
        <url-pattern>/OpenSessionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckSessionAttribute</servlet-name>
        <url-pattern>/CheckSessionAttribute</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThirdServlet</servlet-name>
        <url-pattern>/ThirdServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
